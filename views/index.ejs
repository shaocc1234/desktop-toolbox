    <script>
    // 加载统计数据
    document.addEventListener('DOMContentLoaded', async function() {
        try {
            const response = await fetch('/api/stats');
            const data = await response.json();
            
            if (data.success) {
                const stats = data.data.overview;
                document.getElementById('totalImages').textContent = stats.totalImages || 0;
                document.getElementById('totalSize').textContent = formatFileSize(stats.totalSize || 0);
                document.getElementById('compressedCount').textContent = stats.compressedCount || 0;
                document.getElementById('recentCount').textContent = data.data.recent.count || 0;
            }
        } catch (error) {
            console.error('加载统计数据失败:', error);
        }
    });

    function formatFileSize(bytes) {
        if (bytes === 0) return '0 B';
        const k = 1024;
        const sizes = ['B', 'KB', 'MB', 'GB'];
        const i = Math.floor(Math.log(bytes) / Math.log(k));
        return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
    }
    </script>
