{
  "name": "desktop-toolbox",
  "version": "1.0.1",
  "description": "🛠️ 现代化桌面工具集 - 集成图片上传、图库管理、图片处理、文件夹管理等实用工具，内置脚本快速扩展新功能模块",
  "main": "electron-main.js",
  "homepage": "https://github.com/shaocc1234/desktop-toolbox#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/shaocc1234/desktop-toolbox.git"
  },
  "bugs": {
    "url": "https://github.com/shaocc1234/desktop-toolbox/issues"
  },
  "scripts": {
    "start": "NODE_ENV=development electron .",
    "server": "node app.js",
    "dev": "nodemon app.js",
    "electron": "NODE_ENV=development electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "interactive": "bash start.sh",
    "menu": "bash start.sh",
    "setup": "bash start.sh",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "desktop-toolbox",
    "工具集",
    "image-uploader",
    "gallery-management",
    "image-processing",
    "folder-management",
    "picgo",
    "catbox",
    "desktop-app",
    "electron",
    "nodejs",
    "express",
    "ejs",
    "sharp",
    "sqlite",
    "bootstrap",
    "图床",
    "图片上传",
    "图库管理",
    "图片处理",
    "文件夹管理"
  ],
  "author": {
    "name": "shaocc",
    "email": "1203304560@qq.com",
    "url": "https://github.com/shaocc1234"
  },
  "license": "MIT",
  "dependencies": {
    "axios": "^1.5.0",
    "cors": "^2.8.5",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "form-data": "^4.0.0",
    "helmet": "^7.0.0",
    "mammoth": "^1.11.0",
    "marked": "^16.3.0",
    "multer": "^1.4.5-lts.1",
    "music-metadata": "^11.9.0",
    "node-fetch": "^3.3.2",
    "pdf-parse": "^1.1.1",
    "pdf2pic": "^3.2.0",
    "scribe.js-ocr": "^0.9.0",
    "sqlite3": "^5.1.6",
    "xlsx": "^0.18.5",
    "yauzl": "^3.2.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.0.1",
    "wait-on": "^9.0.0"
  },
  "build": {
    "appId": "com.yourcompany.desktop-toolbox",
    "productName": "桌面工具集",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!test/**/*",
      "!dist/**/*",
      "!docs/**/*",
      "!*.md",
      "!.git*",
      "!create-tool.sh",
      "!start.sh"
    ],
    "asarUnpack": [
      "app.js",
      "models/**/*",
      "services/**/*",
      "routes/**/*",
      "views/**/*",
      "public/**/*",
      "node_modules/sqlite3/**/*",
      "node_modules/sharp/**/*"
    ],
    "afterPack": "./scripts/afterPack.js",
    "mac": {
      "category": "public.app-category.photography",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "title": "桌面工具集安装",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
